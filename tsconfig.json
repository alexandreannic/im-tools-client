{
  "compilerOptions": {
    "target": "ES6",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext",
      "ES2021.String"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "downlevelIteration": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    //    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": [
        "./src/*"
      ]
    },
    "incremental": true
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "src/features/ProtectionSnapshot/*",
    "src/core/uaLocation/*",
    "src/core/uaLocation/aiSettlement.js",
    "src/core/uaLocation/aiHromadas.ts",
    "src/core/uaLocation/settlements.js",
    "src/core/uaLocation/settlements.json",
    "src/core/uaLocation/hromadas.ts",
    "src/core/uaLocation/raions.ts",
    "src/core/uaLocation/aiRaions.ts"
  ]
}
